<%- include("partials/top", { title: "Create Post", currentUser }) %>

<section class="card">
  <h1>Create Post</h1>
  <% if (error) { %><p class="error"><%= error %></p><% } %>
  <form action="/posts" method="POST" class="form">
    <label>Title</label>
    <input type="text" name="title" value="<%= form.title || '' %>" required />

    <label>Content</label>
    <textarea name="content" rows="6" required><%= form.content || '' %></textarea>

    <button type="submit">Save Post</button>
  </form>
</section>

<%- include("partials/bottom") %>
